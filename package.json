{
  "name": "bold-it-chrome-extension",
  "version": "1.0.9",
  "description": "Control the boldness of the text in your browser",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack -w",
    "watch": "cross-env NODE_ENV=development webpack -w",
    "prewatch": "npm run clean",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production webpack",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "bump": "node scripts/bump.js",
    "zip": "cd dist && zip -r ../extension-v$(node -p \"require('../package.json').version\").zip .",
    "bump:patch": "node scripts/bump.js patch"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "postcss-nested": "^7.0.2",
    "rimraf": "^5.0.7",
    "source-map-loader": "^5.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4",
    "webpack-remove-empty-scripts": "^1.1.1",
    "zip-webpack-plugin": "^4.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YardenPorat/bold-it-chrome-extension.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yardenporat/bold-it-chrome-extension/issues"
  },
  "homepage": "https://github.com/yardenporat/bold-it-chrome-extension#readme",
  "volta": {
    "node": "20.9.0"
  }
}
